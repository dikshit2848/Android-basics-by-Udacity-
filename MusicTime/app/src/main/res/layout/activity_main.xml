<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musictime.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/music" />

    <LinearLayout
        android:id="@+id/linear1_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/information_activity"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/lines" />

        <TextView
            android:id="@+id/nowplaying_music"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="NOW PLAYING"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/star_music"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/staro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_music"
        android:id="@+id/linear3_music">

        <TextView
            android:id="@+id/playlist_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="PLAYLIST"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/available_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="AVAILABLE"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recent_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="RECENT"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_below="@id/linear3_music"
        android:text="we will use MEDIAPLAYER class for Music "
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear2_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/love_music"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/love" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/backward" />

        <ImageView
            android:id="@+id/play_music"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/play" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/forward" />

        <ImageView
            android:id="@+id/repeat_music"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/loop" />
    </LinearLayout>

    <TextView
        android:id="@+id/music_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linear2_music"
        android:gravity="center"
        android:padding="10dp"
        android:text="AND GOOD MUSIC"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/love_Music_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/music_music"
        android:gravity="center"
        android:padding="10dp"
        android:text="LIVE ,LOVE ,LAUGH,"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
